@model NewVidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.MovieGenre.Name</li>
    <li>Release Date:  @Model.ReleaseDate.DayOfWeek @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.DayOfWeek @Model.DateAdded.ToShortDateString()</li>
    <li>Number in Stock: @Model.Stock</li>
</ul>
